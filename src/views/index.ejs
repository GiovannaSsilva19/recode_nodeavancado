<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <h3>Achar endereco pelo CEP</h3>           
    </div>
    
            <div class="card-body">
                <form action="/envia-cep" method="POST">
                    <div class="form-group">
                              <label for="cep">Cep</label>
                              <input class="form-control" type="text" name="cep" id="cep">
                              <input type="submit" class="btn btn-outline-success mt-2" value="Buscar">
                    </div>
                </form>
            </div>
        </div>

        <div class ="container mt-5" >
            <div class="card">
                <div class="card-header">
                <h3>Cotação da moeda</h3> 
        </div> 
                        <form action="/envia-pacote" method="POST">
                            <div class="form-group">
                                
                                <select class="form-select" name="valor" id="valor">
                                      <option value="dolar">Dólar</option>
                                      <option value="euro">Euro</option>
                                      <option value="libra">Libra</option>
                                  </select>

                                </div>
                                  <input type="submit" class="btn btn-outline-success mt-2" value="Buscar">
                            </div>
                        </form>
                    </div>
                    </div>
        </div>
